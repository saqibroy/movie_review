<%= simple_form_for(@movie, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :movie_length %>
    <%= f.input :director %>
    <%= f.input :rating %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>



